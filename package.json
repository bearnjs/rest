{
  "name": "@bearn/rest",
  "version": "0.1.4",
  "description": "A fast and lightweight HTTP framework built from scratch in TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./decorators": {
      "types": "./dist/decorators.d.ts",
      "import": "./dist/decorators.js",
      "require": "./dist/decorators.cjs"
    },
    "./routing/router": {
      "types": "./dist/routing/router.d.ts",
      "import": "./dist/routing/router.js",
      "require": "./dist/routing/router.cjs"
    },
    "./core/app": {
      "types": "./dist/core/app.d.ts",
      "import": "./dist/core/app.js",
      "require": "./dist/core/app.cjs"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.cjs"
    },
    "./exceptions": {
      "types": "./dist/exceptions.d.ts",
      "import": "./dist/exceptions.js",
      "require": "./dist/exceptions.cjs"
    },
    "./validation/zod": {
      "types": "./dist/validation/zod.d.ts",
      "import": "./dist/validation/zod.js",
      "require": "./dist/validation/zod.cjs"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*",
        "dist/index.d.ts"
      ]
    }
  },
  "author": "himonshuuu",
  "license": "MIT",
  "keywords": [
    "http",
    "api",
    "framework",
    "typescript"
  ],
  "homepage": "https://github.com/himonshuuu/bearn-rest#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/himonshuuu/bearn-rest.git"
  },
  "bugs": {
    "url": "https://github.com/himonshuuu/bearn-rest/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "build:tsc": "tsc",
    "docs": "typedoc --config typedoc.config.js",
    "format": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "lint:fix": "eslint . --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@types/node": "^24.4.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-promise": "^7.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.43.0",
    "documentation": "^14.0.0"
  },
  "dependencies": {
    "zod": "^4.1.11"
  },
  "lint-staged": {
    "*.{js,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "packageManager": "pnpm@10.13.0"
}
